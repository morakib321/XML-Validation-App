@model XmlValidationApp.Models.XMLandSchemaFileUpload

<h2>XML Validation</h2>

<form asp-controller="XmlValidation" asp-action="ValidateXml" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="XmlFile" class="control-label"></label>
        <input asp-for="XmlFile" type="file" class="form-control" accept=".xml" required />
    </div>
    <div class="form-group">
        <label asp-for="SchemaFile" class="control-label"></label>
        <input asp-for="SchemaFile" type="file" class="form-control" accept=".xsd" required />
    </div>
    <button type="submit" class="btn btn-primary">Validate</button>
</form>

<div>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
</div>
